{% extends 'base.html.twig' %} {% block title %} {{ ad.title }} {% endblock %} {% block body %}

<div class="ad-titre" style="background-image: url( {{ad.coverImage}} );">
    <div class="container">
        <h1>{{ ad.title }}</h1>
        <p>{{ ad.introduction }}</p>
        <p class="h2">
            <strong>{{ ad.rooms }}
                chambres
            </strong> pour
            <strong>{{ ad.price }}€</strong> par nuit
        </p>
        <a href="{{ path('booking_create', {'slug': ad.slug }) }}" class="btn btn-primary">Reservez !</a>

        {% if app.user and app.user == ad.author %}
        <a href="{{ path('ads_edit', {'slug': ad.slug}) }}" class="btn btn-warning">Modifier l'annonce</a>
        <a href="{{ path('ads_delete', {'slug': ad.slug}) }}" class="btn btn-danger"
            onclick="return confirm('êtes vous sûre de vouloir supprimer l\'annonce : {{ad.title}} ?')">supprimer
            l'annonce</a>
        {% endif %}


    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-8 mb-3">
            {{ ad.content | raw }}
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    {% for image in ad.images %}
                    <li data-target="#carouselExampleIndicators" data-slide-to="{{loop.index0 }}"
                        class="{% if loop.first %}active{% endif %}"></li>
                    {% endfor %}
                </ol>
                <div class="carousel-inner">

                    {% for image in ad.images %}
                    <div class="carousel-item {% if loop.first %}active{% endif %}">
                        <img src="{{ image.url }}" class="d-block w-100" alt="image of carousel">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>{{ad.title}}</h5>
                            <p class="shadow-p">{{image.caption}}</p>
                        </div>
                    </div>
                    {% endfor %}

                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <hr>

            {% if ad.comments|length > 0 %}
            <h2 class="mb-3">Commentaire de nos voyageurs</h2>
            <div class="alert alert-info">
                <h4 class="alert-heading text-center">
                    <div class="row align-items-center">
                        <div class="col">
                            Note global donnée par nos voyageurs : <br>
                            <small>Note moyenne calculé sur {{ ad.comments|length}} avis !</small>
                        </div>

                        <div class="col">
                            {% include "includes/rating.html.twig" with {'rating': 4} %}
                        </div>
                    </div>
                </h4>
            </div>
            {% for comment in ad.comments|sort %}
            <div class="bg-light rounded mb-3 py-3 px-3">
                <strong>
                    ({{comment.createdAt|date("m/d/Y H:m")}}) {{comment.author.fullName}} à dit :
                    <blockquote>
                        {{comment.content}}
                    </blockquote>
                    <strong>note donnée par {{comment.author.fullName}} :</strong>
                    {% include "includes/rating.html.twig" with {'rating': comment.rating} %}
                </strong>
            </div>
            {% endfor %}
            {% else %}
            <h2>Cette annonce n'a pas encore été noté ni commenté.</h2>
            {% endif %}

        </div>
        <div class="col">
            {% set author = ad.author %}
            {% set pathAuthor = path('user_show', { 'slug' : author.slug }) %}
            {# Author informations #}
            <div class="row mb-3 align-items-center">
                <div class="col-3">
                    <a href="{{pathAuthor}}">
                        <img src="{{ author.picture }}" class="avatar avatar-medium"
                            alt="avatar de {{ author.fullName }}">
                    </a>
                </div>
                <div class="col">
                    <a href="{{pathAuthor}}">
                        <h3>{{ author.fullName }}</h3>
                    </a>

                    <a href="{{pathAuthor}}">
                        <span class="badge badge-primary">{{ author.ads | length }} annonces</span>
                    </a>

                </div>
            </div>
            {{ author.description | raw }}
        </div>
    </div>
</div>

{% endblock %}