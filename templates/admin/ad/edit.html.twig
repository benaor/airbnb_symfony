{% extends "admin/base.html.twig" %}

{% block title %}
Modification de l'annonce {{ad.id}}
{% endblock title %}

{% block body %}
<div class="container">
    <h1>Modification de l'annonce {{ad.title}}</h1>
    {{form_start(form)}}

    <div class="row">
        <div class="col">

            {# Card for edit Ad information #}
            <div class="card bg-light">
                <div class="card-header">
                    <h4 class="card-title">Corriger l'annonce ? </h4>
                </div>

                <div class="card-body">
                    {{form_widget(form)}}
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i>
                        enregistrer les modifications !
                    </button>
                </div>
            </div>

        </div>

        <div class="col">

            {# Card for resume Reservations #}
            <div class="card bg-light">
                <div class="card-header">
                    <h4 class="card-title">Les r√©servations</h4>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Voyageur</th>
                                <th>Date de reservation</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for booking in ad.bookings %}
                            <tr>
                                <td>{{booking.id}}</td>
                                <td>{{booking.booker.fullName}}</td>
                                <td>{{booking.createdAt|date('d/m/Y H:i')}}</td>
                                <td>
                                    <a href="#" class="btn btn-primary">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            {# Card for Manage comment of this Ad #}
            <div class="card bg-light mt-4">
                <div class="card-header">
                    <h4 class="card-title">Les commentaires</h4>
                </div>

                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Voyageur</th>
                                <th>Note</th>
                                <th>contenu</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for comment in ad.comments %}
                            <tr>
                                <td>{{comment.id}}</td>
                                <td>{{comment.author.fullName}}</td>
                                <td>{{comment.rating}}</td>
                                <td>{{comment.content}}</td>
                                <td>
                                    <a href="#" class="btn btn-primary">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>
        </div>

        {{form_end (form)}}

    </div>


    {% endblock body %}