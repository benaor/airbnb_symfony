{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des commentaires{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">Gestion des commentaires</h1>
    <table class="table table-hover">
        <thead>
            <th>Id</th>
            <th>Date</th>
            <th>Auteur</th>
            <th>Commentaire</th>
            <th>Note</th>
            <th>Annonce</th>
            <th>Action</th>
        </thead>
        <tbody>
            {% for comment in pagination.data %}
            <tr>
                <td>{{comment.id}}</td>
                <td>{{comment.createdAt|date('d/m/Y H:i')}}</td>
                <td> <img src="{{comment.author.picture}}" alt="" class="avatar avatar-mini"> {{comment.author.fullName}}</td>
                <td>{{comment.content}}</td>
                <td> <span class="badge bagde-dark"> {{comment.rating}} </span></td>
                <td>{{comment.ad.title}}</td>
                <td>
                    <a href="{{path('admin_comments_edit', {'id': comment.id})}}" class="btn btn-primary">
                        <i class="fas fa-pen"></i>
                    </a>
                    <a href="{{path('admin_comments_delete', {'id': comment.id})}}" class="btn btn-danger">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% include "admin/includes/pagination.html.twig" with {'route': 'admin_comments_index'} %}

</div>
{% endblock %}