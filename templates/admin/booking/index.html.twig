{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des reservations{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">Gestion des reservations</h1>
    <table class="table table-hover">
        <thead>
            <th>Id</th>
            <th>Date</th>
            <th>visiteur</th>
            <th>Annonce</th>
            <th></th>
        </thead>
        <tbody>
            {% for booking in bookings %}
            <tr>
                <td>{{booking.id}}</td>
                <td>{{booking.createdAt|date('d/m/Y H:i')}}</td>
                <td> <img src="{{booking.booker.picture}}" alt="" class="avatar avatar-mini"> {{booking.booker.fullName}}</td>
                <td>{{booking.ad.title}}</td>
                <td>
                    <a href="{{path('admin_booking_edit', {'id': booking.id})}}" class="btn btn-primary">
                        <i class="fas fa-pen"></i>
                    </a>
                    <a href="" class="btn btn-danger">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}